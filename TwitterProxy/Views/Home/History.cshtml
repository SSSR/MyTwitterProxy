
@{
    ViewBag.Title = "History";
}
@model IEnumerable<Tweetinvi.Core.Interfaces.ITweet>
@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(dto => dto.CreatedBy.Name).Titled("Author").SetWidth(55);
                        columns.Add(dto => dto.CreatedAt).SetWidth(55);
                        columns.Add(dto => dto.Text);
                    }).WithPaging(10)